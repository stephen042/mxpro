<IfModule mod_rewrite.c>
    RewriteEngine On

    # Reverse proxy: Forward requests starting with /node to your Node app
    RewriteCond %{REQUEST_URI} ^/node [NC]
    RewriteRule ^node/(.*)$ http://127.0.0.1:3000/$1 [P,L]

    # Existing rule to send all other requests to Laravel's public folder
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
